<?xml version="1.0"?>
<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/pasaffe/idle-timeout</key>
      <applyto>/apps/pasaffe/idle-timeout</applyto>
      <owner>pasaffe</owner>
      <type>int</type>
      <default>5</default>
      <locale name="C">
        <short>Timeout before Pasaffe is locked</short>
        <long>Number of minutes of inactivity before Pasaffe locks itself.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/pasaffe/lock-on-idle</key>
      <applyto>/apps/pasaffe/lock-on-idle</applyto>
      <owner>pasaffe</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Lock window after inactivity</short>
        <long>When this is true, the Pasaffe window will automatically lock after inactivity.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/pasaffe/only-passwords-are-secret</key>
      <applyto>/apps/pasaffe/only-passwords-are-secret</applyto>
      <owner>pasaffe</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Only passwords are considered to be secret</short>
        <long>When this is true, only the password field is hidden when secrets aren't visible.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/pasaffe/visible-secrets</key>
      <applyto>/apps/pasaffe/visible-secrets</applyto>
      <owner>pasaffe</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Secrets should be visible by default</short>
        <long>When this is true, secrets are visible in the details pane without user intervention.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/pasaffe/auto-save</key>
      <applyto>/apps/pasaffe/auto-save</applyto>
      <owner>pasaffe</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Automatically save changes</short>
        <long>When this is true, Pasaffe will automatically save the database.</long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
